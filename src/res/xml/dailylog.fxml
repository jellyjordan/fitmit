<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<GridPane fx:controller="gui.controllers.DailyLogController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <!-- Tableview columns are based off nutrition.FoodEntry -->
    <TableView
        fx:id = "nutritionTableView"
        GridPane.columnIndex="0"
        GridPane.columnSpan="6"
        GridPane.rowIndex="0"
        GridPane.rowSpan="15">
        <columns>
            <TableColumn
                fx:id ="nameColumn"
                text = "MEAL"
                prefWidth="200">
                <cellValueFactory><PropertyValueFactory property="name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn
                fx:id ="calorieColumn"
                text ="CALORIES"
                prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="calories" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn
                fx:id="carbColumn"
                text="CARBOHYDRATES"
                prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="carbohydrates" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn
                fx:id="fatColumn"
                text="FATS"
                prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="fats" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn
                fx:id="proteinColumn"
                text="PROTEINS"
                prefWidth="100">
                <cellValueFactory><PropertyValueFactory property="proteins" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <Button
        fx:id="addButton"
        GridPane.columnIndex="6"
        GridPane.rowIndex="0"
        text="ADD"
        onAction="#addItem">
    </Button>
    <Button
        fx:id="removeButton"
        GridPane.columnIndex="6"
        GridPane.rowIndex="1"
        text="DEL"
        onAction="#removeItem">
    </Button>
    <Label
        fx:id="goalLabel"
        GridPane.columnIndex="6"
        GridPane.rowIndex="2"
        text="GOAL">
    </Label>
    <VBox
        fx:id="goalBox"
        GridPane.columnIndex="6"
        GridPane.rowIndex="3"
        GridPane.rowSpan="4">
        <HBox>
            <Label
                text="CALORIES:">
            </Label>
            <Label
                fx:id="calGoalLabel">
            </Label>
        </HBox>
        <HBox>
            <Label
                    text="CARBS:">
            </Label>
            <Label
                    fx:id="carbGoalLabel">
            </Label>
        </HBox>
        <HBox>
            <Label
                    text="FATS:">
            </Label>
            <Label
                    fx:id="fatGoalLabel">
            </Label>
        </HBox>
        <HBox>
            <Label
                    text="PROTEINS:">
            </Label>
            <Label
                    fx:id="proGoalLabel">
            </Label>
        </HBox>
    </VBox>
    <Label
        fx:id="currentLabel"
        GridPane.columnIndex="6"
        GridPane.rowIndex="7"
        text="CURRENT">
    </Label>
    <VBox
        fx:id="currentBox"
        GridPane.columnIndex="6"
        GridPane.rowIndex="8"
        GridPane.rowSpan="4">
        <HBox>
            <Label
                    text="CALORIES:">
            </Label>
            <Label
                    fx:id="calCurrentLabel">
            </Label>
        </HBox>
        <HBox>
            <Label
                    text="CARBS:">
            </Label>
            <Label
                    fx:id="carbCurrentLabel">
            </Label>
        </HBox>
        <HBox>
            <Label
                    text="FATS:">
            </Label>
            <Label
                    fx:id="fatCurrentLabel">
            </Label>
        </HBox>
        <HBox>
            <Label
                    text="PROTEINS:">
            </Label>
            <Label
                    fx:id="proCurrentLabel">
            </Label>
        </HBox>
    </VBox>
</GridPane>